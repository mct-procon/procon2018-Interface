<UserControl x:Class="GameInterface.CellUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameInterface"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border>
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="LightGray" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding AreaState_}" Value="{x:Static local:Cell+AreaState.AREA_1P}">
                        <Setter Property="Background" Value="LightBlue" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding AreaState_}" Value="{x:Static local:Cell+AreaState.AREA_2P}">
                        <Setter Property="Background" Value="LightPink" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Score}" FontSize="20"/>
    </Border>
</UserControl>
