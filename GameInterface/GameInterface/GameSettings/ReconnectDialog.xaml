<Window x:Class="GameInterface.GameSettings.ReconnectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameInterface.GameSettings"
        mc:Ignorable="d"
        Title="ReconnectDialog" Height="180" MaxHeight="180" MinHeight="180" Width="800">
    <Grid Margin="10">
        <TextBlock Text="AIの再接続を待っています" FontSize="32" Foreground="Gray" VerticalAlignment="Top"/>
        <Grid Margin="10,60,10,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding PlayerText}" FontSize="24" Margin="10"/>

            <ProgressBar x:Name="Progress" Value="100" IsIndeterminate="true" Margin="10" Grid.Column="1"/>
        </Grid>

    </Grid>
</Window>
